<script>
	document.getElementById("addFileInputButton").addEventListener("click", function () {
		const fileInputContainer = document.getElementById("fileInputContainer");

		// 새로운 input-group 컨테이너 생성
		const newInputContainer = document.createElement("div");
		newInputContainer.className = "input-group mb-3";

		// input-group-text를 위한 span 엘리먼트 생성
		const span = document.createElement("span");
		span.className = "input-group-text";
		span.textContent = "작가 닉네임"; // "작가" 텍스트 추가

		// 새로운 input 엘리먼트 생성
		const input = document.createElement("input");
		input.type = "text";
		input.className = "form-control";
		input.name = "authorNameList"; // name 속성 추가

		// 생성한 엘리먼트들을 조합
		newInputContainer.appendChild(span);
		newInputContainer.appendChild(input);

		// fileInputContainer에 새로운 input-group 컨테이너 추가
		fileInputContainer.appendChild(newInputContainer);
	});


</script>
