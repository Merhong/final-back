						<div class="d-flex justify-content-around">
							{{#responseDTO.authorWebtoonList}}
							<div class="text-center mb-3">
								<a href="/detailForm/{{id}}"><div>{{id}}  </div></a><div>{{title}}</div>
								<img src="/image?route=WebtoonThumbnail/{{image}}" style="max-width: 150px; height: auto;"/>

