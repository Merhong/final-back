                        </div> }}

						<div class="input-group mb-3">
							<span class="input-group-text">ID</span>
							<input type="text" class="form-control" value="{{responseDTO.id}}" name="title" disabled>
						</div>

						<div class="input-group mb-3">
							<span class="input-group-text">작가명</span>
							<input type="text" class="form-control" value="{{responseDTO.authorNickname}}" name="title" disabled>
						</div>

						<div class="input-group mb-3">
							<span class="input-group-text">소개글</span>
							<textarea class="form-control" rows="5"
							         disabled name="intro" ,>{{responseDTO.introduce}}</textarea>
						</div>

						<div class="input-group mb-3">
							<span class="input-group-text">작가 사이트</span>
							<input type="text" class="form-control" value="{{responseDTO.siteURL}}" name="title" disabled>
						</div>

						<div class="input-group mb-3">
							<span class="input-group-text">관심작가등록</span>
							<input type="text" class="form-control" value="{{responseDTO.interestCount}}명" name="title" disabled>
						</div>


