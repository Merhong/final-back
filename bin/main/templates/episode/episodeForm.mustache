{{> layout/header}}



<div class="col-auto container">

	<h1 class="text-center mt-2">에피소드 등록</h1>
	
<button id="addFileInputButton" class="w-100 btn bg-info mb-3">에피소드 사진 추가</button>

<form action="/add/episodes" method="post" onsubmit="" 
      id="selectform" enctype="multipart/form-data">

	<div class="d-flex">

		<div class="col-12 pt-1">
			
			
			{{! <div class="d-flex flex-column img-fluid" style="width:500; height:200;">
				<img src="/images/Advertising/default_advertising_sub.jpg" class=""/>
			</div> }}

			<div class="input-group mb-3">
				<span class="input-group-text">웹툰 제목</span>
				<input type="text" class="form-control" value="" name="webtoonTitle" placeholder="에피소드를 등록할 웹툰의 제목">
			</div>

			<div class="mb-3">
				<input type="file" class="form-control" name="thumbnailPhoto">
			</div>

			<div class="input-group mb-3">
				<span class="input-group-text">에피소드 제목</span>
				<input type="text" class="form-control" value="" name="detailTitle">
			</div>

			<div class="input-group mb-3">
				<span class="input-group-text">작가의 말</span>
				<textarea class="form-control" rows="5"
				          name="authorText",></textarea>
			</div>

			<div class="mb-2" id="fileInputContainer">
				<input type="file" class="form-control mb-3" name="photoList">
			</div>
		</div>

	</div>

	<!--

    <div class="input-group mb-3 ms-1">
        <span class="input-group-text">기업소개</span>
        <textarea class="form-control" rows="5"></textarea>
    </div>
    -->

	<div>
		<input id="button" class="btn btn-primary w-100 mb-3 mt-2 bg-primary" type="submit" value="작성 완료" onclick="">
	</div>

</form>


</div>


<script>


document.getElementById("addFileInputButton").addEventListener("click", function() {
    const fileInputContainer = document.getElementById("fileInputContainer");
    const newFileInput = document.createElement("input");
    newFileInput.type = "file";
    newFileInput.className = "form-control mb-3";
    newFileInput.name = "photoList";
    fileInputContainer.appendChild(newFileInput);
});


</script>








